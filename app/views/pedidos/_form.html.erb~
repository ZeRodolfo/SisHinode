<%= form_for @pedido, :html => { :class => "form-horizontal pedido" } do |f| %>

  <% if @pedido.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pedido.errors.count, "error") %> prohibited this pedido from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pedido.errors.full_messages.each do |msg| %>
          <li><%= Nao ha estoque %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :iten_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:iten_id, Iten.all, :id, :get_produto_nome, prompt: true)%>
    </div>
    <%=f.error_span(:iten_id) %>
  </div>
  <div class="form-group">
    <%= f.label :cliente_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:cliente_id, Cliente.all, :id, :nome, prompt: true)%>
    </div>
    <%=f.error_span(:cliente_id) %>
  </div>
  <div class="form-group">
    <%= f.label :quantidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :quantidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:quantidade) %>
  </div>
  <div class="form-group">
    <%= f.label :valortotal, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valortotal, :class => 'form-control' %>
    </div>
    <%=f.error_span(:valortotal) %>
  </div>
  <div class="form-group">
    <%= f.label :datapedido, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :datapedido, :class => 'form-control' %>
    </div>
    <%=f.error_span(:datapedido) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pedidos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
